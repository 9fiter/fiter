{% extends '::base.html.twig' %}
 
{% block title %}Editar subcategoría{% endblock %}
 
{% block main %}
<h1>Editar subcategoría</h1>

<form action="{{ path('subcategoria_update', { 'id': entity.id, 'slug': entity.slug }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p><button type="submit">Editar</button></p>
</form>

<a href="{{ path('subcategoria') }}">Volver a la lista</a>
<form action="{{ path('subcategoria_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button type="submit">Eliminar</button>
</form>  
{% endblock %}