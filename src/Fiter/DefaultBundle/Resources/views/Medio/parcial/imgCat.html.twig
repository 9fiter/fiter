<a href="{{ path('medio_show', { 'id': entity.id , 'slug': entity.slug}) }}">
    {% if entity.path %}
        <img style="float: left;margin-right: .7em;" src="{{ asset(  ['/uploads/medios/', entity.path]|join  )|imagine_filter('thumb_170x114') }}" alt="entity.titulo" />
    {% elseif entity.categoria[0].path %}
        <img style="float: left;margin-right: .7em;" src="{{ asset(  ['/uploads/categoriaimages/', entity.categoria[0].path]|join  )|imagine_filter('thumb_170x114') }}" alt="{{entity.categoria[0].path}}" />
    {% endif %}
</a>