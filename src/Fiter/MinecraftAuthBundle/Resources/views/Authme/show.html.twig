    <br/>

    {% include 'FiterMinecraftAuthBundle:Authme:parcial/skinPreview.html.twig' %}

    {% render "FiterDefaultBundle:Default:map" with { lat : entity.latitude , lang :entity.longitude, height : 300, zoom :2 } %}

