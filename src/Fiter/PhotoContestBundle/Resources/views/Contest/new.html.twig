{% extends '::base.html.twig' %}
 
{% block title %}{{ 'main.photoContests' | trans }} - {{ app.request.host }}{% endblock %}

{% block main %}
<article>
    <header>
       <h2>{{ 'main.photoContestCreate' | trans }}</h2>
    </header>

	<form id="contest_create_form" action="{{ path('contest_create') }}" method="post" {{ form_enctype(form) }}>
	    {{ form_errors(form) }}  
            
        {{ form_label(form.titulo) }}
        {{ form_widget(form.activo) }}<span>{{ form_label(form.activo,label|default(null)) }}</span>
        {{ form_widget(form.activarComentarios) }}<span>{{ form_label(form.activarComentarios,label|default(null)) }}</span><br>
        {{ form_widget(form.titulo) }}


	    {{ form_rest(form) }}
	</form>

	<br/>
	<a class="btn btn-primary" href="{{ path('contest') }}">{{ 'main.back' | trans }}</a>



</article>
{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="/js/formoid/jquery.uniform.min.js"></script>
<script type="text/javascript"> 
    $("form").find("input[type=file]").uniform();
    $("form").find("input[type=file]").change(function() {
        readURL(this)
    });
    $(".uploader span.filename").text("{{ 'main.noFileSelected' | trans }}");
    $(".uploader span.action").text("Seleccionar");
</script>
{% endblock %}