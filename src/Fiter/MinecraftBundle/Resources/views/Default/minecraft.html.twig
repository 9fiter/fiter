<style>
.minecraftStatus{
	width: 300px;
	height: 300px;
	background-color: #000;
	color:#000;
	background-image: url("/img/minecraft.png");
	position: relative;
	margin-bottom: 1.5em;
}

.minecraftStatus .name{
font-family: georgia;
font-size: 1.2em;
font-weight: bold;
color: rgb(36, 36, 36);

}
.minecraftStatus .ping,
.minecraftStatus .players{
font-family: georgia;
font-size: 2em;
font-weight: bold;
color: rgba(255, 202, 107, 0.75);
text-shadow: 2px 2px 9px #000;
}

.minecraftStatus .masInfo{
	position: absolute;
	margin-top: 45%;
	margin-left: 4%;
	background-color: rgba(0, 0, 0, 0.74);
	border-radius: 2em;
	padding: .4em 1em;
	box-shadow: 0px 0px 31px 0px #000;
}
.minecraftStatus .masInfo:hover{
	background-color: rgba(255, 255, 255, 0.74);
	color:#fff;
}
.minecraftStatus .masInfo:hover a{
	color:#000;
}


.minecraftStatus .masInfo a{
	color:#ccc;
	font-size: 2em;
	font-weight: bold;
	font-family: georgia;
}
.minecraftStatus .name,
.minecraftStatus .players,
.minecraftStatus .ping{
	position: absolute;
	right: 3px;
}
.minecraftStatus .name{ top: 63px; }
.minecraftStatus .players{ top: 231px;}
.minecraftStatus .ping{ top: 260px; }
</style>
{#% for status in statusarray %#}

	<div class="minecraftStatus sombra">

		{% if ok %}
			<span class="name">{{minecraft_server}} - v1.6.2{#{status.version}#}</span>
			<span class="players">Players: {{status.players}}/{{status.maxplayers}}</span>
			<span class="ping">Ping: {{ '%d'|format(status.ping/10) }}</span>
		{% else %}
			<span class="name">Players - 1.5.2{#{status.version}#}</span>
			<span class="players">{{ 'main.players' | trans }}: 0/150</span>
			<span class="ping">No disponible</span>
		{% endif %}
			<div class="masInfo">
				<a href="http://dejamejugar.com/es/articulo/105/servidor-de-minecraft-no-premium-152-dejamejugarcom/ver">
				Más información</a>
			</div>
			<!--motd: {#{status.motd}#}
			<span class="hostname">hostame: {#{status.hostname}#}</span>
			<span class="maxplayers">Status:</span>-->
	</div>
{#% endfor %#}