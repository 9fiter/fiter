{% extends '::admin.html.twig' %}
 
{% block stylesheets %}
    <link href="{{ asset('js/ui1.8.16/themes/base/jquery.ui.all.css') }}" rel="stylesheet" />
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery-ui-1.10.0.custom.js') }}"></script>
	<script src="{{ asset('js/ui1.8.16/jquery.ui.core.js') }}"></script>
	<script src="{{ asset('js/ui1.8.16/jquery.ui.widget.js') }}"></script>
	<script src="{{ asset('js/ui1.8.16/jquery.ui.datepicker.js') }}"></script>
    {{ form_javascript(form) }}
{% endblock %}


{% block title %}{{ 'main.addPoll' | trans }}{% endblock %}

{% block main %} 
    <h1>{{ 'main.addPoll' | trans }}</h1>
	<form action="{{ path('poll_create') }}" method="post" {{ form_enctype(form) }}>
	    {{ form_errors(form) }}  

	    <span>{{ form_label(form.title) }}</span>
	    {{ form_widget(form.isActive) }}<span>{{ form_label(form.isActive,label|default(null)) }}</span>
	    {{ form_widget(form.answersVisible) }}<span>{{ form_label(form.answersVisible,label|default(null)) }}</span><br>
	    {{ form_widget(form.title) }}

	    <!-- <span>{#{ form_label(form.type) }#}</span> -->
	    {#{ form_widget(form.type) }#}




	    
	    {#{ form_label(form.fields) }#}
        <ul class="listasYoutube" data-prototype="{{ form_widget(form.fields.vars.prototype)|e }}">
            {% for field in form.fields %}
            	<label>{{ 'main.answer' | trans }}</label>
                <li>{{ form_widget(field.title) }}</li>
            {% endfor %}
        </ul> 
		
	    {{ form_rest(form) }}

	    {#% if not alreadyAnswered %#}
        	<button type="submit">{{ 'main.create' | trans }}</button>
    	{#% endif %#}
	    
	    <a class="boton" href="{{ path('poll') }}">{{ 'main.backList' | trans }}</a>
	</form>
    
{% endblock %}