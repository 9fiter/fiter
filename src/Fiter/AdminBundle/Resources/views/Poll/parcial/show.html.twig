<article class="encuesta">
    <header>
        <h3><a href="{{ path('admin_poll_show', { 'id': entity.id }) }}">{{ entity.title }}</a></h3>
        
        {% if (entity.usuario == app.user or is_granted('ROLE_ADMIN')) %}
        <span class="bloque">
		    <img class="ico" alt="editar" src="/img/edit.png">
		    <a href="{{ path('admin_poll_edit', { 'id': entity.id }) }}">{{ 'main.editar' | trans }}</a>
		</span>
		{% endif %}

		<p>
	    {{ 'main.por' | trans }} <a href="{{ path('admin_pollusuario', { 'nombre': entity.usuario }) }}">{{ entity.usuario }} </a>

	    <span>{% if entity.createdAt %}{{ entity.createdAt|time_ago_in_words }}{% endif %}   </span>
	    </p>
    </header>

    
	<ol type="a" style="margin:0;">
		{% for field in entity.fields %}
		<li>
			<span>{{ field.title }}</span>{% if results is defined %}: {{results[loop.index-1]}}{% endif %}	
			<!-- <a href="{#{ path('answer_new', { 'id': field.id }) }#}"><img class="ico" alt="likes" src="/img/like.png" /></a> -->
			<a href="{{ path('answer_create', { 'fieldId': field.id }) }}"><img class="ico" alt="likes" src="/img/like.png" /></a>
		</li>
		{% endfor %}
		<!-- <a href="{#{ path('poll_results', { 'pollId': entity.id }) }#}">Ver resultados</a><br/> -->
	</ol><br/>
    <div style="clear: both;"></div>
</article>
<div style="clear: both;"></div>