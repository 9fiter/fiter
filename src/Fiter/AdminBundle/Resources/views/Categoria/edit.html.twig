{% extends '::admin.html.twig' %}
 
{% block title %}Editar categoría{% endblock %}
 
{% block main %}
<h2>Editar categoría</h2>

<form id="form_categoria_update" action="{{ path('categoria_update', { 'id': entity.id, 'slug': entity.slug }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
</form>

<form id="form_categoria_delete" action="{{ path('categoria_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
</form>   
<button form="form_categoria_update" type="submit">Guardar</button>
<a class="boton" href="{{ path('categoria') }}">Volver</a>
<button form="form_categoria_delete" type="submit">Eliminar</button>
{% endblock %}


{% block javascripts %}
<script type="text/javascript" src="/js/formoid/jquery.uniform.min.js"></script>
<script type="text/javascript"> 
    $("form").find("input[type=file]").uniform();
    $(".uploader span.filename").text("No se ha seleccionado ningún archivo");
    $(".uploader span.action").text("Seleccionar");
</script>
{% endblock %}   