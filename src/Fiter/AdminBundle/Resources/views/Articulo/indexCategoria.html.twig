{% extends '::admin.html.twig' %}
 
{% block title %}Art√≠culos{% endblock %}

{% block asideL %}    
    {#% render 'FiterDefaultBundle:Categoria:menu' with {'slug': categoriaSlug} %#}
    {% set menuItem = knp_menu_get('FiterDefaultBundle:Builder:mainMenu', [], { 'active': categoriaSlug }) %}
    {{ knp_menu_render(menuItem, {'template': 'FiterDefaultBundle:Menu:knp_menu.html.twig'}) }}
{% endblock %}   

{% block main %} 
    <h2>{{ categoriaSlug|capitalize }}</h2>
    {% for entity in entities %}
    <article>
        <header>
            <h3><a href="{{ path('admin_articulo_show', { 'id': entity.id, 'slug': entity.slug }) }}">{{ entity.titulo }}</a></h3>
            {% include 'FiterAdminBundle:Articulo:parcial/datos.html.twig' with {'entity': entity} %}
        </header>
        
        {#% include 'FiterAdminBundle:Articulo:parcial/imgCat.html.twig' with {'entity': entity} %#}
            
        <!-- <div >{#{ entity.contenido(true)|striptags|raw }#}</div> -->
        <div style="clear: both"></div>
    </article>
    {% endfor %}
{% endblock %}
    
 
    
    
{% block paginador %}
<section style="" class="paginador">
    <ul>
        {% if paginador.currentPage > 1 %}
            <li><a href="{{ path('admin_articulocategoria', { 'slug': categoriaSlug , 'page': paginador.previousPage}) }}">Anterior</a></li>
        {% else %}
            <li>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</li>
        {% endif %}

        {% for page in paginador.minPageInRange..paginador.maxPageInRange %}
            {% if page == paginador.currentPage %}
                <li class="actual">{{ page }}</li>
            {% else %}
                <li><a href="{{ path('admin_articulocategoria', { 'slug': categoriaSlug , 'page': page }) }}">{{ page}}</a></li>
            {% endif %}
        {% endfor %}

        {% if paginador.currentPage < paginador.lastPage %}
            <li><a href="{{ path('admin_articulocategoria', { 'slug': categoriaSlug , 'page': paginador.nextPage })}}">Siguiente</a></li>
        {% else %}
            
        {% endif %}
    </ul>
</section>
{% endblock %}      
    
    
{% block relacionados %}
    {% render 'FiterDefaultBundle:Articulo:listaRelacionados' with {'slug': categoriaSlug} %}
{% endblock %}  