<h3><a href="#">{{ 'registration.title'|trans({}, 'FOSUserBundle') }}</a></h3>
<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    {{ form_errors(form) }}
        
    {{ form_label(form.username) }}
    {{ form_errors(form.username) }}
    {{ form_widget(form.username) }}<br/>  
    
    {{ form_label(form.email) }}
    {{ form_errors(form.email) }}
    {{ form_widget(form.email) }}<br/> 
    
    {% for passwordField in form.plainPassword %}
        {{ form_label(passwordField, null, { 'attr': {'class': 'form-label'} }) }}
        {{ form_widget(passwordField, { 'attr': {'class': 'form-input'} }) }}<br/>
    {% endfor %}
        
    {{ form_rest(form) }}
    <br/>
    <button class="ancho" type="submit" >{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</button>

</form>
<br/>