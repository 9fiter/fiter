{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}

<form id="form_login2" action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
    <input class="negro" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

    <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
    <input class="negro" type="password" id="password" name="_password" required="required" /><br/>

    <br/>
    
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <span><label class="linea" for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label></span>
</form>
    
<button class="botonNegro gradient" type="submit" id="_submit" form="form_login2" name="_submit">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
<a class="botonNegro gradient" href="{{ path('fos_user_security_login') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
<p style="text-align: center"><a href="{{ path('fos_user_resetting_request') }}">{{ 'security.login.forgot'|trans({}, 'FOSUserBundle') }}</a></p>